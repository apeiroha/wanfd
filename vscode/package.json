{
  "name": "wanf-language-support",
  "displayName": "WANF Syntax & Linter",
  "description": "Syntax highlighting and linting for the WANF configuration language.",
  "version": "0.3.3",
  "publisher": "wjqserver",
  "repository": {
    "type": "git",
    "url": "https://github.com/WJQSERVER/wanf.git"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:wanf"
  ],
  "scripts": {
    "vscode:prepublish": "tsgo -p ./",
    "compile": "tsgo -p ./",
    "watch": "tsgo -watch -p ./"
  },
  "contributes": {
    "languages": [
      {
        "id": "wanf",
        "aliases": [
          "WANF",
          "wanf"
        ],
        "extensions": [
          ".wanf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "wanf",
        "scopeName": "source.wanf",
        "path": "./syntaxes/wanf.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "WANF",
      "properties": {
        "wanf.language": {
          "type": "string",
          "enum": [
            "auto",
            "en",
            "zh-cn"
          ],
          "default": "auto",
          "description": "The display language for linter error messages. With 'auto', the extension will use the editor's display language if a translation is available, otherwise it will default to English."
        },
        "wanf.format.noSort": {
          "type": "boolean",
          "default": false,
          "description": "If true, the formatter will not sort fields within blocks, preserving the original order."
        }
      }
    }
  },
  "devDependencies": {
    "@typescript/native-preview": "7.0.0-dev.20250805.1",
    "@types/vscode": "^1.70.0",
    "@types/node": "^18.x"
  }
}